@* Частичное представление контейнера редактирования поста *@
@model WebArchivProject.Models.DTO.DtoPostEdit

<div class="row">
    <div class="col-sm-1 col-md-1"></div>
    <div class="col-sm-10 col-md-10">
        <form method="post" asp-page-handler="EditPost">
            <div class="card-body">
                @if (Model.Authors != null && Model.Authors.Count > 0)
                {
                    @for (int i = 0; i < Model.Authors.Count; i++)
                    {
                        <div class="form-group row author-row mb-sm-1">
                            <label class="col-md-3 col-form-label" for="author">Автор @(i+1)</label>
                            <div class="col-md-3 author-field">
                                <input class="form-control form-control-sm my-lang-input-c"
                                       type="text"
                                       asp-for="@Model.Authors[i].NameUa"
                                       value="@Model.Authors[i].NameUa"
                                       placeholder="Ім'я українською.."
                                       required>
                            </div>
                            <div class="col-md-3 author-field">
                                <input class="form-control form-control-sm my-lang-input-c"
                                       type="text"
                                       asp-for="@Model.Authors[i].NameRu"
                                       value="@Model.Authors[i].NameRu"
                                       placeholder="Ім'я російською..">
                            </div>
                            <div class="col-md-3 author-field">
                                <input class="form-control form-control-sm my-lang-input-ef"
                                       type="text"
                                       asp-for="@Model.Authors[i].NameEn"
                                       value="@Model.Authors[i].NameEn"
                                       placeholder="Ім'я англійською..">
                            </div>
                        </div>
                    }
                }
                <div class="form-group row mb-sm-1">
                    <label class="col-md-3 col-form-label" asp-for="Name"></label>
                    <div class="col-md-9">
                        <input type="hidden" asp-for="@Model.Id" value="@Model.Id" />
                        <input class="form-control form-control-sm"
                               type="text"
                               asp-for="@Model.Name"
                               value="@Model.Name"
                               placeholder="Ввведіть назву публікації.."
                               required>
                    </div>
                </div>
                <div class="form-group row mb-sm-1">
                    <label class="col-md-3 col-form-label" asp-for="Year"></label>
                    <div class="col-md-9">
                        <input class="form-control form-control-sm my-count-input"
                               type="text"
                               asp-for="@Model.Year"
                               value="@Model.Year"
                               placeholder="Ввведіть рік публікації.."
                               required>
                    </div>
                </div>
                <div class="form-group row mb-sm-1">
                    <label class="col-md-3 col-form-label">Назва журналу</label>
                    <div class="col-md-9">
                        <input class="form-control form-control-sm"
                               type="text"
                               asp-for="@Model.Magazine"
                               value="@Model.Magazine"
                               required
                               placeholder="Ввведіть назву журналу..">
                    </div>
                </div>
                <div class="form-group row mb-sm-1">
                    <label class="col-md-3 col-form-label">Том</label>
                    <div class="col-md-9">
                        <input class="form-control form-control-sm"
                               type="text"
                               asp-for="@Model.TomName"
                               value="@Model.TomName"
                               required
                               placeholder="Введіть назву тому..">
                    </div>
                </div>
                <div class="form-group row mb-sm-1">
                    <label class="col-md-3 col-form-label">Номер журналу</label>
                    <div class="col-md-9">
                        <input class="form-control form-control-sm"
                               type="text"
                               asp-for="@Model.MagazineNumber"
                               value="@Model.MagazineNumber"
                               required
                               placeholder="Ввведіть номер журналу..">
                    </div>
                </div>
                <div class="form-group row mb-sm-1">
                    <label class="col-md-3 col-form-label">Інтервал сторінок</label>
                    <div class="col-md-9">
                        <input class="form-control form-control-sm my-page-int-mask"
                               type="text"
                               asp-for="@Model.PagesInterval"
                               value="@Model.PagesInterval"
                               required
                               placeholder="Ввведіть інтервал сторінок..">
                    </div>
                </div>
                <button class="btn btn-block btn-success mb-3"
                        type="submit">
                    Змінити
                </button>
            </div>
        </form>
    </div>
    <div class="col-sm-1 col-md-1"></div>
</div>
<script>
    $(document).ready(function () {
        $(".my-count-input").mask('0000')
        $(".my-page-int-mask").mask('0999 — 0999')
        $(".my-lang-input-c").mask('ZZZZZZZZZZZZZZZZZZZZ', {
            translation: {
                'Z': {
                    pattern: /[йцукенгшщзхэждлорпавыфячсмитьбюЙЦУКЕНГШЩЗХФЫВАПРОЛДЖЭЯЧСМИТЬБЮІіЇїЄє .]/, optional: true
                }
            }
        })
        $(".my-lang-input-ef").mask('ZZZZZZZZZZZZZZZZZZZZ', {
            translation: {
                'Z': {
                    pattern: /[qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM .]/, optional: true
                }
            }
        })
    });
</script>
