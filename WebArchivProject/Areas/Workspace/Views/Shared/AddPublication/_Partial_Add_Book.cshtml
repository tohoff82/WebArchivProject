<!-- Частичное представление карточки добавления книг/методичек -->
<div class="card">
    <div class="card-header">Книга або методичка<span class="badge badge-pill badge-info float-right">2</span></div>
    <div class="card-body">
        <form class="form-horizontal" action="" method="post">
            <div class="form-group row">
                <div class="col-md-3"></div>
                <div class="col-md-4 col-form-label">
                    <div class="form-check form-check-inline mr-1">
                        <input class="form-check-input" id="inline-radio1" type="radio" value="option1" name="inline-radios" checked>
                        <label class="form-check-label" for="inline-radio1">Книга</label>
                    </div>
                </div>
                <div class="col-md-4 col-form-label">
                    <div class="form-check form-check-inline mr-1">
                        <input class="form-check-input" id="inline-radio2" type="radio" value="option2" name="inline-radios">
                        <label class="form-check-label" for="inline-radio2">Методичка</label>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-3 col-form-label" for="hf-email">Видавництво</label>
                <div class="col-md-8">
                    <input class="form-control" id="hf-email" type="text" name="hf-email" placeholder="Введіть назву видавництва..">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-3 col-form-label" for="hf-password">Місто</label>
                <div class="col-md-8">
                    <input class="form-control" id="hf-password" type="text" name="hf-password" placeholder="Ввведіть назву міста..">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-3 col-form-label" for="hf-password">Кількість сторінок</label>
                <div class="col-md-8">
                    <input class="form-control" id="hf-password" type="text" name="hf-password" placeholder="Ввведіть кількість сторінок..">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-3 col-form-label" for="select1">Тип книги</label>
                <div class="col-md-8">
                    <select class="form-control" id="select1" name="select1">
                        <option value="0">Вибрати</option>
                        <option value="1">Підручник</option>
                        <option value="2">Навчальний посібник</option>
                        <option value="3">Методичний посібник</option>
                        <option value="4">Навчально-методичний посібник</option>
                        <option value="5">Іньше</option>
                    </select>
                </div>
            </div>
        </form>
    </div>
    <div class="card-footer">
        <form method="post" asp-page-handler="back">
            <button class="btn btn-sm btn-info float-left" type="submit"> < Назад </button>
        </form>
        <form method="post" asp-page-handler="add">
            <button class="btn btn-sm btn-info float-right" type="submit"> Додати </button>
        </form>
    </div>
</div>
