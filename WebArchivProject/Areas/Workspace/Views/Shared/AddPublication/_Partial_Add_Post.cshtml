<!-- Частичное представление карточки добавления публикаций -->

<form class="form-horizontal"
      method="post"
      asp-page-handler="addPost">
    <div class="card">
        <div class="card-header">Стаття<span class="badge badge-pill badge-info float-right">2</span></div>
        <div class="card-body">
            @*<div class="form-group row">
                    <label class="col-md-3 col-form-label" for="hf-email">Назва статті</label>
                    <div class="col-md-8">
                        <input class="form-control" id="hf-email" type="text" name="hf-email" placeholder="Введіть назву статті..">
                    </div>
                </div>*@
            <div class="form-group row">
                <label class="col-md-3 col-form-label">Назва журналу</label>
                <div class="col-md-8">
                    <input class="form-control"
                           type="text"
                           name="magazine"
                           required
                           placeholder="Ввведіть назву журналу..">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-3 col-form-label">Том</label>
                <div class="col-md-8">
                    <input class="form-control"
                           type="text"
                           name="tomname"
                           required
                           placeholder="Ввведіть назву тому..">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-3 col-form-label">Номер журналу</label>
                <div class="col-md-8">
                    <input class="form-control"
                           type="text"
                           name="magazinenumber"
                           required
                           placeholder="Ввведіть номер журналу..">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-3 col-form-label">Інтервал сторінок</label>
                <div class="col-md-3">
                    <input class="form-control my-count-input"
                           type="text"
                           name="pagesintervalstart"
                           required
                           placeholder="Початок">
                </div>
                <div class="col-md-1">—</div>
                <div class="col-md-3">
                    <input class="form-control my-count-input"
                           type="text"
                           name="pagesintervalfinish"
                           required
                           placeholder="Кінець">
                </div>
                <div class="col-md-2"></div>
            </div>
        </div>
        <div class="card-footer">
            <button class="btn btn-sm btn-info float-left" type="button" onclick="BackSubmit()"> < Назад </button>
            <button class="btn btn-sm btn-info float-right" type="submit"> Додати </button>
        </div>
    </div>
</form>
<form method="post" asp-page-handler="back" id="_btn_back_form"></form>
<script>
    $(document).ready(function () {
        $(".my-count-input").mask('0000')
    });
    function BackSubmit() {
        $('form#_btn_back_form').submit();
    }
</script>
