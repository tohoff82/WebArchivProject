<!-- Частичное представление модального окна поиска книг -->
@model WebArchivProject.Models.SearchFilters.BooksComboFilters
@using static WebArchivProject.Helper.StringConstant

<div class="modal-dialog modal-lg modal-success" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">Фільтрувати книги або методички</h4>
            <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
        </div>
        <div class="modal-body">
            <form class="form-horizontal" action="" method="post">
                <div class="form-group row">
                    <div class="col-md-2">
                        <select class="form-control" id="select1" name="select1">
                            <option value="@DEFAULT_FILTER">Рік</option>
                            @foreach (var year in Model.Years)
                            {
                                <option value="@year">@year</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-4">
                        <select class="form-control" id="select1" name="select1">
                            <option value="@DEFAULT_FILTER">Автор</option>
                            @foreach (var author in Model.Authors)
                            {
                                <option value="@author">@author</option>
                            }
                            <option value="@DEFAULT_FILTER">Усі</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <select class="form-control" id="select1" name="select1">
                            <option value="@DEFAULT_FILTER">Назва</option>
                            @foreach (var name in Model.Names)
                            {
                                <option value="@name">@name</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button class="btn btn-info" type="button">Фільтрувати</button>
                    </div>
                </div>
            </form>
            <p>* Після фільтрації нижче в таблиці буде відображено результат пошуку</p>
            <table class="table table-responsive-sm table-sm">
                <thead>
                    <tr>
                        <th>№</th>
