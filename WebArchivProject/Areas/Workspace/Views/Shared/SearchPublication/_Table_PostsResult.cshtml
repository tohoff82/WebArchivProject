<!-- Частичное представление таблицы постов -->
@model WebArchivProject.Models.VO.Paginator<WebArchivProject.Models.DTO.DtoSearchresultPost>
@using static WebArchivProject.Extensions.StringExtensions
@using static WebArchivProject.Helper.StringConstant
@inject WebArchivProject.Contracts.IServUserSession _usrSess

<div class="fade-in">
    <table class="table table-responsive-sm table-sm">
        <thead>
            <tr>
                <th>№</th>
                <th>Автор</th>
                <th>Назва статті</th>
                <th>Журнал</th>
                <th>Рік</th>
                <th>Том</th>
                <th>Сторінок</th>
                <th>Інтервал</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var post in Model)
            {
                <tr id="@post.Id.ToNav(Model.ForTable, Model.ForContainer)">
                    <td>@post.Id</td>
                    <td>
                        @foreach (var author in post.Authors)
                        {
                            @author<br />
                        }
                    </td>
                    <td>@post.Name</td>
                    <td>@post.Magazine</td>
                    <td>@post.Year</td>
                    <td>@post.TomName</td>
                    <td>@post.PagesCount</td>
                    <td>@post.PagesInterval</td>
                    <td>
                        @await Html.PartialAsync("_UI_Button_DeleteItem", new WebArchivProject.Models.DTO.DtoButtonDeleteItem
                        {
                            DeletedItemId = post.Id,
                            ItemType = Model.ForTable,
                            Disabled = !(_usrSess.User.Id == post.OwnerId || _usrSess.User.Role == ROLE_ADMIN),
                            ItemTrigger = string.Concat('#', post.Id.ToNav(Model.ForTable, Model.ForContainer))
                        })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @await Html.PartialAsync("_UI_Paginator_Block", Model)
</div>